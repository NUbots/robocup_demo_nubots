#!/usr/bin/sh
set -e

if ! [ $(id -u) = 0 ]; then
    sudo "$0" "$@"
else
    # Update apt, install the packages and cleanup the cache to make the layer smaller
    apt update && apt upgrade -y --no-install-recommends
    apt install "$@" -y --no-install-recommends
    rm -rf /var/lib/apt/lists/*
fi